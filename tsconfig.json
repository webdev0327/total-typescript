{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ]
}