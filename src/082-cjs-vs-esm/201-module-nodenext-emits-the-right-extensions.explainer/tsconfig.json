{
  "compilerOptions": {
    "target": "ES2022",
    // Try changing module to commonjs/ESNext and moduleResolution to Bundler
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
